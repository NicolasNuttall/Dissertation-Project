<IfModule mod_rewrite.c>
    RewriteEngine on
    RewriteRule ^(.+[^/])/$ http://%{HTTPS_HOST}/Promotion/$1 [R=301,L]


    RewriteRule ^([^/\.]+)?$ index.php?p=$1 [L]
    RewriteRule ^([^/\.]+)/([^/\.]+)$ index.php?p=$1&id=$2 [NC,L]
    RewriteRule ^([^/\.]+)/([^/\.]+)/([^/\.]+)$ index.php?p=$1&id=$2&tab=$3 [NC,L]
    

</IfModule>